<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBar.Solid.TvMaze.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_title_logo</item>
    </style>

    <style name="AppTheme.Forecast" parent="@style/AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.TvMaze.NoTitle</item>
    </style>

    <style name="Theme.AppCompat.FullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CardItem">
        <item name="android:layout_width">@dimen/default_match_constraint</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="CardItemShowName" parent="CardItem">
        <item name="android:textSize">@dimen/default_card_title_font</item>
    </style>

    <style name="CardItemShowGenres" parent="CardItem">
        <item name="android:textSize">@dimen/default_card_genres_font</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
